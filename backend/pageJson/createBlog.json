{
    "title": "Create Blog",
    "name": "Blog",
    "jsonPage": "viewBlog",
    "desciption": "",
    "pageType": "create",
    "urlFields": ["newBlog"],
    "fields": [{
        "name": "Blog Post",
        "type": "text",
        "tableRef": "blogPost",
        "placeholder": "Enter blogPost",
        "id": "blogPost",
        "url": ""
    }, {
        "name": "Author",
        "type": "selectFromTable",
        "tableRef": "author",
        "searchApi": "searchCall",
        "placeholder": "Enter author",
        "id": "author",
        "validation": ["required", "trim", "unique"],
        "url": "coach/search"
    }, {
        "name": "Athlete",
        "type": "selectFromTable",
        "tableRef": "athlete",
        "searchApi": "searchCall",
        "placeholder": "Enter athlete",
        "id": "athlete",
        "validation": ["required", "trim", "unique"],
        "url": "athlete/search"
    }, {
        "name": "Image",
        "type": "image",
        "tableRef": "image",
        "placeholder": "Enter image",
        "id": "image",
        "validation": ["required", "trim", "unique"],
        "url": ""
    }, {
        "name": "Title",
        "type": "text",
        "tableRef": "title",
        "placeholder": "Enter title",
        "id": "title",
        "validation": ["required", "trim", "unique"],
        "url": ""
    }, {
        "name": "Publishing Date",
        "type": "date",
        "tableRef": "publishingDate",
        "placeholder": "Enter publishingDate",
        "id": "publishingDate",
        "url": ""
    }, {
        "name": "Content",
        "type": "textarea",
        "tableRef": "content",
        "placeholder": "Enter content",
        "id": "content",
        "validation": ["required", "trim", "unique"],
        "url": ""
    }, {
        "name": "Blog Likes",
        "type": "box",
        "tableRef": "blogLikes",
        "validation": ["", "trim", "unique"],
        "fields": [{
            "name": "Athlete",
            "type": "selectFromTable",
            "tableRef": "athlete",
            "searchApi": "searchCall",
            "placeholder": "Enter athlete",
            "id": "athlete",
            "onView": true,
            "validation": ["required", "trim", "unique"],
            "url": "athlete/search"
        }, {
            "name": "Type",
            "type": "tags",
            "tableRef": "type",
            "placeholder": "Enter type",
            "id": "type",
            "validation": ["required", "trim", "unique"],
            "url": "",
            "dropDownField": "",
            "dropDownType": "single",
            "onView": true,
            "dropDown": ["Like", "Dislike"]
        }]
    }],

    "action": [{
        "name": "submit",
        "action": "submitBlog",
        "stateName": {
            "page": "page",
            "json": {
                "id": "viewBlog"
            }
        }
    }, {
        "name": "cancel",
        "sideMenuRedirect": true,
        "stateName": "page({id:'viewBlog'})"
    }],
    "apiCall": {
        "url": "Blog/save"
    }
}